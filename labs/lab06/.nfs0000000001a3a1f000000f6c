#!/bin/bash

: > log

for size in 100 1000 10000 100000 1000000
do
	echo === Testing difference for ASCENDING input, size $size === >> log
	./gen $size A | tail -n -$((size-1)) | ./sortA > tmpA
	./gen $size A | tail -n -$((size-1)) | ./sortA > tmpB
	diff tmpA tmpB >> log
done

for size in 100 1000 10000 100000 1000000 
do
	echo === Testing difference for DESCENDING input, size $size === >> log
	./gen $size D | tail -n -$((size-1)) | ./sortA > tmpA
	./gen $size D | tail -n -$((size-1)) | ./sortA > tmpB
	diff tmpA tmpB >> log
done

for size in 100 1000 10000 100000 1000000 
do
	echo === Testing difference for REVERSE input, size $size === >> log
	./gen $size R | tail -n -$((size-1)) | ./sortA > tmpA
	./gen $size R | tail -n -$((size-1)) | ./sortA > tmpB
	diff tmpA tmpB >> log
done


